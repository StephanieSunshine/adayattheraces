<p id="notice"><%= notice %></p>

<h1>Listing Races</h1>

<table>
  <thead>
    <tr>
      <th>Runtime</th>
      <th>Contestants</th>
      <th>Finish order</th>
      <th>Bets</th>
      <th>Purse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= race.runtime %></td>
        <td><%= race.contestants %></td>
        <td><%= race.finish_order %></td>
        <td><%= race.bets %></td>
        <td><%= race.purse %></td>
        <td><%= link_to 'Show', race %></td>
        <td><%= link_to 'Edit', edit_race_path(race) %></td>
        <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

