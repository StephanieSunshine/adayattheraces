<p id="notice"><%= notice %></p>

<h1>Listing Bets</h1>

<table>
  <thead>
    <tr>
      <th>Bid</th>
      <th>Rid</th>
      <th>Hid</th>
      <th>Finish position</th>
      <th>Amount</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.bid %></td>
        <td><%= bet.rid %></td>
        <td><%= bet.hid %></td>
        <td><%= bet.finish_position %></td>
        <td><%= bet.amount %></td>
        <td><%= bet.paid %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

